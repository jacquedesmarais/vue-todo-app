<div id="app">
  <h2>To Do:</h2>
    <div v-for="task in tasks" v-on:click="removeTask(task)">
      <h3>Task: {{ task.text }}</h3>
      <h3>Priority: {{ task.priority }}</h3>
    </div>
  <h4>Add a Task</h4>
  Task: <input v-model="newTaskText"><br>
  Priority: <input v-model="newTaskPriority"><br>
  <button v-on:click="addTask()">Add Task</button>
</div>